{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="span3">
            {% include 'layout/navigation.html.twig' %}
            {% include 'UsersUsersBundle:Default/modulesUsed:usersConnected.html.twig' %}
            {{ render(controller('EcommerceEcommerceBundle:Basket:menu')) }}
        </div>
        <div class="span9">
            {% for flashMessage in app.session.flashBag.get('success') %}
                <div class="alert alert-success alert-dismissible text-center">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashBag.get('error') %}
                <div class="alert alert-error alert-dismissible text-center">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <h2>My Bills</h2>
            <form>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Reference</th>
                            <th>Date</th>
                            <th>Price TTC</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
{#                    {{ dump(bills) }}#}
                        {% if bills|length == 0 %}
                            <tr>
                                <td colspan="4"><center>Actuellement aucune facture! </center></td>
                            </tr>
                        {% endif %}
                        {% for bill in bills %}
                        <tr>
                            <td>ref: {{ bill.reference }}</td>
                            <td>{{ bill.date|date('d/m/Y') }}</td>
                            <td>{{ bill.commande.priceTTC }} FCFA</td>
                            <td><a href="{{ path('bill_pdf', { 'id' : bill.id }) }}" class="btn btn-inverse" target="_blank">Print a bill</a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

{% endblock %}