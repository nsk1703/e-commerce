{% extends "base.html.twig" %}

{% set totalHT = 0 %}
{% set totalTTC = 0 %}
{% set refTva = {} %}

{# Insertion continue d'une valeur tva a chaque fois qu'il y'en a une differente; avec la fonction "merge" #}
{% for product in products %}
    {% set refTva = refTva|merge({ ('%' ~ product.tva.valeur) : 0 }) %}
{% endfor %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="span3">
                {% include 'layout/navigation.html.twig' %}
                {% if(is_granted('IS_AUTHENTICATED_FULLY')) %}
                    {% include 'UsersUsersBundle:Default/modulesUsed:usersConnected.html.twig' %}
                {% else %}
                    {% include 'UsersUsersBundle:Default/modulesUsed:usersAction.html.twig' %}
                {% endif %}
            </div>
            {# Message flash d'interaction #}
            <div class="span9">
                {% for message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success alert-dismissible text-center">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                        {{ message }}
                    </div>
                {% endfor %}
                <h2>Validate your Basket</h2>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Quantity</th>
                            <th>Unitary Price</th>
                            <th>Total HT</th>
                        </tr>
                    </thead>
                    <tbody>
                        {#   Si la taille du taille du tableau produit 0 #}
                        {% if(products|length == 0) %}
                            <tr>
                                <td colspan="4"><center>Nothing in your basket</center></td>
                            </tr>
                        {% endif %}
                        {% for product in products %}
                            <tr>
                                <form action="{{ path('add_basket', { 'id' : product.id }) }}" method="get">
                                    <td> {{ product.name }} </td>
                                    <td> {{ basket[product.id] }} </td>
                                    <td> {{ product.price }} FCFA </td>
                                    <td> {{ product.price * basket[product.id] }} FCFA</td>
                                </form>
                            </tr>
                            {% set totalHT = totalHT + (product.price * basket[product.id]) %}
                            {% set totalTTC = totalTTC + (product.price * basket[product.id])|tva(product.tva.multiplicate) %}
                            {% set refTva = refTva|merge({ ('%' ~ product.tva.valeur) : refTva['%' ~ product.tva.valeur] + (product.price * basket[product.id])|montant_tva(product.tva.multiplicate) }) %}
                        {% endfor %}
                    </tbody>
                </table>
                <dl class="dl-horizontal pull-right">
                    <dt>Total HT :</dt>
                    <dd>{{ totalHT }} FCFA</dd>
                    {% for key, tva in refTva %}
                        <dt>TVA: {{ key }} </dt>
                        <dd> {{ tva }}</dd>
                    {% endfor %}
                    <dt>Total TTC:</dt>
                    <dd>{{ totalTTC }} FCFA </dd>
                </dl>

{#                <div class="span3 pull-left">#}
                    <dl class="pull-left">
                        <dt><h4>Deliver address</h4></dt>
                        <dt>{{ userAddressDeliver.nom}} {{ userAddressDeliver.prenom }}</dt>
                        <dt> {{ userAddressDeliver.addresse }}</dt>
                        <dt>{{ userAddressDeliver.cp }} {{ userAddressDeliver.ville }} - {{ userAddressDeliver.pays }}</dt>
                    </dl>
{#                </div>#}

                <div class="span3">
                    <dl class=" pull-right">
                        <dt><h4>Bill address</h4></dt>
                        <dt>{{ userAddressBill.nom}} {{ userAddressBill.prenom }}</dt>
                        <dt> {{ userAddressBill.addresse }}</dt>
                        <dt>{{ userAddressBill.cp }} {{ userAddressBill.ville }} - {{ userAddressBill.pays }}</dt>
                    </dl>
                </div>

                <div class="clearfix"></div>
                <a href="#" class="btn btn-success pull-right mt-3">Payer</a>
                <a href="{{ path('deliver') }}" class="btn btn-primary mt-3">Retour</a>
            </div>

        </div>
    </div>
{% endblock %}
