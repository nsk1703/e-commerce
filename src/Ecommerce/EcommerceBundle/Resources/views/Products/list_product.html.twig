{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="span3">
                {% include 'layout/navigation.html.twig' %}
                {% include 'UsersUsersBundle:Default/modulesUsed:usersAction.html.twig' %}
            </div>
            <div class="span9">

                <ul class="thumbnails">
                    {% for product in products %}
                        <li class="span3">
                            <div class="thumbnail">
                                <img src="{{ product.image.path }}" alt="DevAndClick" width="300" height="150">
                                <div class="caption">
                                    <h4>{{ product.name }}</h4>
                                    <p>{{ product.price }} FCFA</p>
                                    <a class="btn btn-primary" href="{{ path('product_info', { 'id' : product.id }) }}">More Infos</a>
                                    <a class="btn btn-success" href="{{ path('add_basket') }}">Add in Basket</a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>

                <div class="pagination">
                    <ul>
                        <li class="disabled"><span>Previous</span></li>
                        <li class="disabled"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}