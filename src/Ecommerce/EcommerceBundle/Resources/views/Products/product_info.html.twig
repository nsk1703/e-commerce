{% extends "base.html.twig" %}

{% block title %}{{ product.name }}{% endblock %}
{% block description %}{{ product.description }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="span3">
                {% include 'layout/navigation.html.twig' %}
            </div>

            <div class="span9">
                <div class="row">
                    <div class="span5">
                        <img src="{{ product.image.path }}" alt="DevAndClick" width="470" height="310">
                    </div>

                    <div class="span4">
                        <h4>{{ product.name }}</h4>
                        <h5>{{ product.category.nom }}</h5>
                        <p>{{ product.description }}</p>
                        <h4>{{ product.price|tva(product.tva.multiplicate) }} FCFA</h4>
                        <form action="{{ path('add_basket') }}">
                            <select name="qte" class="span1">
                                <option>1</option>
                            </select>
                            <div>
                                <button class="btn btn-primary">Add in Basket</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}